pipeline{
    agent none
    stages{
        stage('Tomcat version'){
            agent{
                docker {image 'tomcat:jre21-temurin'}
            }
            steps{
                // below ls command shows directories inside the container 
                sh 'ls /usr/local'

                //but below ls command shows directories present in workspace 
                sh 'ls'
                sh 'pwd'

                //below command runs inside container
                sh 'cat /usr/local/tomcat/RELEASE-NOTES | grep "Apache Tomcat Version"'

                sh '''
                cd
                pwd
                ls
                '''
            }
        }
    }
}
